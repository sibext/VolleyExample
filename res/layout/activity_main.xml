<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <Button
        android:id="@+id/butStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/out01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/out02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/greed01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greed" />

        <ImageView
            android:id="@+id/out03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/out04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/out0_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/f0_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/greed11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greed" />

        <ImageView
            android:id="@+id/f1_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/out1_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/out0_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/f0_centr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/greed21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greed" />

        <ImageView
            android:id="@+id/f1_centr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/out1_centr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/out0_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/f0_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/greed31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greed" />

        <ImageView
            android:id="@+id/f1_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/out1_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/out01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/out02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/greed41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/greed" />

        <ImageView
            android:id="@+id/out03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />

        <ImageView
            android:id="@+id/out04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/out" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/resGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/edNumPause"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/hint_pause"
            android:inputType="number"
            android:text="1" />

        <Button
            android:id="@+id/butStartFull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/edNumPause"
            android:text="@string/StartFullGame" />
    </RelativeLayout>
    <RelativeLayout 
        android:layout_width="match_parent" 
        android:layout_height="match_parent">
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout1">
            <Button android:id="@+id/button1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Ход"/>

            <ToggleButton
                android:id="@+id/toggleButton1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textOn="Остановить"
                android:textOff="Продолжить"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сброс" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Счет   " />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0" />
            
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>